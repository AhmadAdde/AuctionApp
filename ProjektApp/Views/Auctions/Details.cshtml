@model ProjektApp.ViewModels.AuctionDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Auction Details -- @Html.DisplayFor(model => model.Title) </h4>
    <hr />
    <img src="@Model.ImageUrl" alt="image" width="400px" />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuctionOwner)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuctionOwner)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Starting_Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Starting_Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HighestBid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HighestBid)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created_Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created_Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Is_Expired)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Is_Expired)
        </dd>
    </dl>
    <div>
        @Html.ActionLink("Edit the description", "Edit", new { id = Model.Id })
    </div>
</div>
<div>
    <h3><b>Bids</b></h3>
    <table claass="table">
        <thead>
            <tr>
                <th class ="col-sm-2">
                    <b>Bidder</b>
                </th>
                <th class ="col-sm-2">
                    <b>Offer amount</b>
                </th>
                <th class="col-sm-2">
                    <b>Bid date</b>
                </th>
            </tr>
        </thead>
        <tbody>
@foreach (var item in Model.BidVMs){
            <tr>
                <td class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.BidMaker)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Offer_Amount)
                </td>
                <td class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Bid_Date)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.ActionLink("Bid", "Bid", new { Model.Id })
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
